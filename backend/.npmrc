# Performance optimizations
prefer-offline=true
prefer-online=false
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Package management
save-exact=true
package-lock=true
engine-strict=true

# Network settings
fetch-timeout=300000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=30000

# Configure for better caching
cache-min=999999999
prefer-offline=true

# Configure for better security
ignore-scripts=false

# Configure for better dependency resolution
legacy-peer-deps=true
