# Docker Environment Configuration
# Copy this to .env for Docker deployment

# Database Configuration (Docker PostgreSQL)
DB_HOST=database
DB_PORT=5432
DB_NAME=electricity_app
DB_USER=electricity_user
DB_PASSWORD=your_password_here

# Eloverblik API Configuration
ELOVERBLIK_REFRESH_TOKEN=your_refresh_token_here
ELOVERBLIK_METERING_POINTS=your_metering_point_id

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=5000
PORT=5000
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Automated Sync Configuration
SYNC_ENABLED=true
SYNC_SCHEDULE=0 14 * * *
SYNC_DAYS_BACK=1

# Admin API Configuration
# Token for accessing admin endpoints like manual sync trigger
# Leave empty to disable authentication (not recommended for production)
ADMIN_TOKEN=your_secure_admin_token_here
