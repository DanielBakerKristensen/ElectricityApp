# Local Development Environment Configuration
# Copy this to .env for local development

# Database Configuration (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=electricity_app
DB_USER=electricity_user
DB_PASSWORD=your_password_here

# Eloverblik API Configuration
ELOVERBLIK_REFRESH_TOKEN=your_refresh_token_here
ELOVERBLIK_METERING_POINTS=your_metering_point_id

# Backend Configuration
NODE_ENV=development
BACKEND_PORT=5000
PORT=5000
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=local_dev_secret_change_in_production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
